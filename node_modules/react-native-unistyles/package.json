{
  "name": "react-native-unistyles",
  "version": "2.0.1",
  "description": "Level up your React Native StyleSheet",
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "tsc": "node_modules/typescript/bin/tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "prepare": "husky install && bob build",
    "precommit": "concurrently 'yarn tsc' 'yarn lint' 'yarn test'",
    "release": "release-it"
  },
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/src/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "ios",
    "android",
    "cxx",
    "react-native-unistyles.podspec",
    "!lib/typescript/examples",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/*.spec.ts",
    "!**/*.spec.tsx",
    "!**/.*"
  ],
  "keywords": [
    "react-native",
    "ios",
    "android",
    "react-native-macos",
    "react-native-web",
    "expo"
  ],
  "repository": "https://github.com/jpudysz/react-native-unistyles",
  "author": "Jacek Pudysz <jacekpudysz@gmail.com> (https://github.com/jpudysz)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jpudysz/react-native-unistyles/issues"
  },
  "homepage": "https://github.com/jpudysz/react-native-unistyles#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "18.4.3",
    "@react-native/eslint-config": "0.74.0",
    "@react-native/normalize-colors": "0.74.1",
    "@release-it/conventional-changelog": "8.0.1",
    "@testing-library/react-hooks": "8.0.1",
    "@types/jest": "29.5.11",
    "@types/react": "18.2.46",
    "@typescript-eslint/eslint-plugin": "6.16.0",
    "@typescript-eslint/eslint-plugin-tslint": "6.16.0",
    "@typescript-eslint/parser": "6.16.0",
    "commitlint": "18.4.3",
    "concurrently": "8.2.2",
    "eslint": "8.56.0",
    "eslint-config-codemask": "1.1.7",
    "eslint-plugin-functional": "6.0.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jsdoc": "46.10.1",
    "eslint-plugin-jsx-a11y": "6.8.0",
    "eslint-plugin-nested-if": "1.0.0",
    "eslint-plugin-no-else": "0.2.2",
    "eslint-plugin-no-loops": "0.3.0",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "husky": "8.0.3",
    "jest": "29.7.0",
    "react": "18.2.0",
    "react-native": "0.72.7",
    "react-native-builder-bob": "0.23.2",
    "react-native-web": "0.19.9",
    "react-test-renderer": "18.2.0",
    "release-it": "17.0.1",
    "typescript": "5.3.3"
  },
  "peerDependencies": {
    "@react-native/normalize-colors": "*",
    "react": "*",
    "react-native": "*",
    "react-native-macos": "*",
    "react-native-web": "*"
  },
  "peerDependenciesMeta": {
    "react-native-macos": {
      "optional": true
    },
    "react-native-web": {
      "optional": true
    }
  },
  "workspaces": [
    "examples/expo",
    "examples/macos",
    "docs"
  ],
  "packageManager": "yarn@3.6.1",
  "engines": {
    "node": ">= 18.0.0"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/examples/expo/node_modules",
      "<rootDir>/examples/macos/node_modules",
      "<rootDir>/docs/node_modules",
      "<rootDir>/lib/"
    ],
    "testMatch": [
      "**/*.spec.(ts|tsx)"
    ],
    "coverageReporters": [
      "html"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/",
    "src/utils/hash32.ts"
  ],
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
